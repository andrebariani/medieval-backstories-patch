<?xml version="1.0" encoding="utf-8"?>
<Patch>

	<Operation Class="PatchOperationFindMod">
		<mods>
			<li>The Profaned</li>
		</mods>
		<match Class="PatchOperationSequence">
			<success>Always</success>
			<operations>
        <li Class="PatchOperationAdd">
          <xpath>
            /Defs/PawnKindDef[@Name="BotchJob_ProfanedPawnKindBase"]</xpath>
          <value>
            <backstoryFilters>
              <li>
                <categories>
                  <li>Tribal</li>
                  <li>Medieval</li>
                  <li>MedievalCommon</li>
                  <li>MedievalKnight</li>
                </categories>
              </li>
            </backstoryFilters>
          </value>
        </li>

				<li Class="PatchOperationReplace">
					<xpath>/Defs/PawnKindDef[defName="DankPyon_HedgeKnightRox"]/backstoryCategories/li[text()="Tribal"]</xpath>
					<value>
            <li>Tribal</li>
						<li>Medieval</li>
						<li>MedievalCommon</li>
						<li>MedievalKnight</li>
					</value>
				</li>

        <li Class="PatchOperationReplace">
					<xpath>/Defs/PawnKindDef[defName="BotchJob_ProfanedSoldier"]/backstoryCategories/li[text()="Tribal"]</xpath>
					<value>
            <li>Tribal</li>
						<li>Medieval</li>
						<li>MedievalCommon</li>
						<li>MedievalKnight</li>
					</value>
				</li>

        <li Class="PatchOperationReplace">
					<xpath>/Defs/PawnKindDef[defName="BotchJob_ProfanedShieldbearer"]/backstoryCategories/li[text()="Tribal"]</xpath>
					<value>
            <li>Tribal</li>
						<li>Medieval</li>
						<li>MedievalCommon</li>
						<li>MedievalKnight</li>
					</value>
				</li>

        <li Class="PatchOperationReplace">
					<xpath>/Defs/PawnKindDef[defName="BotchJob_ProfanedHeadhunter"]/backstoryCategories/li[text()="Tribal"]</xpath>
					<value>
            <li>Tribal</li>
						<li>Medieval</li>
						<li>MedievalCommon</li>
						<li>MedievalKnight</li>
					</value>
				</li>

        <li Class="PatchOperationReplace">
					<xpath>/Defs/PawnKindDef[defName="BotchJob_ProfanedCursebearer"]/backstoryCategories/li[text()="Tribal"]</xpath>
					<value>
            <li>Tribal</li>
						<li>Medieval</li>
						<li>MedievalCommon</li>
						<li>MedievalKnight</li>
					</value>
				</li>
			</operations>
		</match>
	</Operation>

</Patch>