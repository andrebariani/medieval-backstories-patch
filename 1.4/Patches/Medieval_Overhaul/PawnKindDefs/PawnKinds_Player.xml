<?xml version="1.0" encoding="utf-8"?>
<Patch>

	<Operation Class="PatchOperationFindMod">
		<mods>
			<li>Medieval Overhaul</li>
		</mods>
		<match Class="PatchOperationSequence">
			<!-- <success>Always</success> -->
			<operations>
				<li Class="PatchOperationReplace">
					<xpath>
						/Defs/PawnKindDef[defName="DankPyon_Subject"]/backstoryCategories/li[text()="Tribal"]</xpath>
					<value>
						<li>Medieval</li>
						<li>MedievalCommon</li>
					</value>
				</li>

				<li Class="PatchOperationReplace">
					<xpath>
						/Defs/PawnKindDef[defName="DankPyon_PlayerMercenary"]/backstoryCategories/li[text()="Tribal"]</xpath>
					<value>
						<li>Medieval</li>
						<li>MedievalCommon</li>
					</value>
				</li>

				<li Class="PatchOperationReplace">
					<xpath>
						/Defs/PawnKindDef[defName="DankPyon_HedgeKnight"]/backstoryCategories/li[text()="Tribal"]</xpath>
					<value>
						<li>MedievalKnight</li>
					</value>
				</li>
			</operations>
		</match>
	</Operation>

</Patch>