<?xml version="1.0" encoding="utf-8"?>
<Patch>

	<Operation Class="PatchOperationSequence">
		<success>Always</success>
		<operations>
			<!-- Medieval Common -->
			<li Class="PatchOperationAdd" MayRequire="Ludeon.Rimworld.Royalty">
				<xpath>/Defs/BackstoryDef[
					defName="MenagerieKeeper1" or
					defName="RoyalCook18" or
					defName="ImperialPriest24" or
					defName="HeadButler50" or
					defName="ImperialInquisitor53" or
					defName="OrnamentMaker56" or
					defName="BalletDancer81" or
					defName="HouseServant86" or
					defName="ChurchPsychic98"
					]
					/spawnCategories</xpath>
				<value>
					<li>Medieval</li>
					<li>MedievalCommon</li>
				</value>
			</li>
			
			<!-- Medieval Knight -->
			<li Class="PatchOperationAdd" MayRequire="Ludeon.Rimworld.Royalty">
				<xpath>/Defs/BackstoryDef[
					defName="RoyalGuard51"
					]
					/spawnCategories</xpath>
				<value>
					<li>Medieval</li>
					<li>MedievalKnight</li>
				</value>
			</li>

			<!-- Medieval Noble&Royal -->

		</operations>
	</Operation>

</Patch>